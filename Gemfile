gem 'twitter-text'
# gem 'omniauth'
gem 'omniauth-twitter'
gem 'bitly'
gem 'nokogiri'
gem 'rinku'
gem 'whenever'
gem 'boxcar_api'
gem 'css3buttons'
gem 'will_paginate'

# JavaScript runtime for Rails 3.1 asset compilation
